    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
  <%= render 'layouts/navbar' %>
        <%= yield %>

  <%= render 'layouts/footer' %>
  </body>
</html>
