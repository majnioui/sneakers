<div class="container">
    <div class="row">
        <!-- Image -->
        <div class="col-12 col-lg-6">
            <div class="card bg-light mb-3">
            <div class="card-header"> <%= @product.name %>
            </div>
                <div class="card-body">
                    <a href="" data-toggle="modal" data-target="#productModal">
                        <% if @product.image.present? %>
                            <%= image_tag(@product.image, style:'width:100%') %>
                        <% end %>
                    </a>
                    <p class="text-center">
                        <strong>Category: </strong>
                        <%= link_to @product.category.name, @product.category %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Add to cart -->
        <div class="col-12 col-lg-6 add_to_cart_block">
        
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <p class="price"><%= @product.price %>$</p>
                      <div class="form-group">

                        </div>
                    <form>
                    <h5>Stock: <span class="badge badge-secondary"><%= @product.stock %></span></h5>
                        <div class="form-group">
                            <label>Quantity :</label>
                    </form>                   
      <%= form_with(model: @order_item, remote: true) do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.number_field :quantity, value: 1, min: 1, style:"display:none"%>
          <% if current_user.present? %>
            <%= f.submit "Add To Cart", class:"btn btn-success btn-block" %>
          <% else %>
            <%= link_to "Login to buy", new_user_session_path, class:"btn btn-success btn-block" %>
          <% end %>
        <% end %>

                </div>
            </div>
        </div>
    </div>

    <div class="row desc">
        <!-- Description -->
        <div class="col-12">
            <div class="card border-light mb-3">
                <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-align-justify"></i> Description</div>
                <div class="card-body">
                    <p class="card-text">
                      <%= @product.description %>
                    </p>

                </div>
            </div>
        </div>

        <!-- Reviews -->
        <div class="col-12" id="reviews">
            <div class="card border-light mb-3">
                <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-comment"></i> Reviews</div>
                <div class="card-body">
                    <div class="review">
                        <% @reviews.each do |review| %>
                            <%= render 'reviews/review', product: @product, review: review %>
                        <% end %>
                            <br />
                            <%= render 'reviews/form', product: @product %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

