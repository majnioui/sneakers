<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form>
  <div class="form-group">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control' %>
  </div>
 </div>
 <div class="form-group">
  <div class="field">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class:'form-control' %>
  </div>
 </div>
  <div class="form-group">
  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, class:'form-control' %>
  </div>
 </div>
 <div class="form-group">
  <div class="field">
    <%= form.label :stock %>
    <%= form.text_field :stock, class:'form-control' %>
  </div>
 </div>
  <div class="form-group">
<% if product.image.attached? %>
<div style="width:250px; height:auto">
<%= image_tag(@product.image, style:'width:100%') %>
</div>
<% end %>
 </div>
  <div class="form-group">
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, class:'form-control-file' %>
  </div>
 </div>
 <div class="form-group">
  <div class="field">
    <%= form.label :featured %>
    <%= form.check_box :featured %>
  </div>
 </div>
<div>
 <div class="form-group">
<%= form.label :category %>
<%= form.select :category_id, options_for_select(@categories.collect {|cat| [cat.name, cat.id]}), class:'form-control form-control-sm'%>
 </div>
</div>
 <div class="form-group">
  <div class="actions">
    <%= form.submit 'Update Product', :class => 'btn btn-info' %>
  </div>
 </div>
  </form>
<% end %>
