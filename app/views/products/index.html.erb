<p id="notice"><%= notice %></p>
<%= link_to 'New Product', new_product_path %>

<div class="container">
    <div class="row">
        <div class="bg-light col-sm-6>
    <% @products.each do |product| %>

<div class="card" style="width: 18rem; margin:5px">
  <% if product.image.present? %>
    <%= image_tag product.image, class:"card-img-top", style:"width: 18rem; height: 10rem" %>
  <% end %>
  <div class="card-header"><h4><%= link_to product.name, product %></h4></div>
  <div class="card-body">  
    <div class="row">
      <div class="col">
        <p class="btn btn-danger btn-block disabled"><%= product.price%> $</p>
      </div>
      <div class="col">
      <%= form_with(model: @order_item, url: order_items_path) do |f| %>
        <%= f.fields_for :order_item do |options_form| %>
          <%= options_form.hidden_field :product_id, value: product.id %>
          <%= options_form.number_field :quantity, value: 1, min: 1, style:"display:none"%>
          <%= options_form.submit "Add To Cart", class:"btn btn-success btn-block" %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'Edit', edit_product_path(product) %>
        <% end %>

      <% end %>
      </div>
    </div>
  </div>
</div>
    <% end %>
      </div>
    </div>
  </div>
</div>
